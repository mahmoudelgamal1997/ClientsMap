<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#0288D1"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_company"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="اسم المستشفي"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_adress"
        android:layout_below="@+id/device_company"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="العنوان "
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_department"
        android:layout_below="@+id/device_adress"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="اسم القسم"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_name"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/device_department"
        android:textColorHint="#FFFFFF"
        android:hint="اسم الجهاز"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_type"
        android:layout_below="@+id/device_name"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="النوع"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/device_serial"
        android:layout_below="@+id/device_type"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="Serial Number"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_serial"
        android:id="@+id/device_notice"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:hint="ملاحظات"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upload"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/device_notice"
        android:text="ok"
        />
</RelativeLayout>