<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <!-- Les CardView possèdent des attributs supplémentaires dont
         - cardBackgroundColor
         - cardElevation pour l'élévation (donc aussi l'ombre)
         - cardCornerRadius pour arrondir les angles
     -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Les CardView agissent comme des FrameLayout,
         pour avoir une organisation verticale nous devons
         donc rajouter un LinearLayout -->

        <TextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:padding="4dp"
            android:textSize="25dp"
            />


        <TextView
            android:id="@+id/textview_timeSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timeSent"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/textview_timeRecieved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تحت الطلب"
            android:padding="5dp"
            android:layout_below="@+id/textview_timeSent"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DeviceDepartment"
            android:text="DeviceDepartment"
            android:layout_below="@+id/textview_username"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_companyName"
            android:text="CompanyName"
            android:layout_below="@+id/textview_DeviceDepartment"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_companyAdress"
            android:text="Adress"
            android:layout_below="@+id/textview_companyName"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/textview_DeviceName"
            android:layout_width="match_parent"
            android:text="DeviceName"
            android:textSize="20dp"
            android:padding="4dp"
            android:layout_below="@+id/textview_companyAdress"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DeviceType"
            android:text="DeviceType"
            android:layout_below="@+id/textview_DeviceName"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DeviceSerial"
            android:text="DeviceSerial"
            android:layout_below="@+id/textview_DeviceType"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_DeviceNotify"
            android:text="ملاحظات"
            android:layout_below="@+id/textview_DeviceSerial"
            android:layout_marginTop="5dp"
            android:padding="4dp"
            android:textSize="22dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>